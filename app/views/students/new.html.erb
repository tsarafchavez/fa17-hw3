<%= form_tag students_path do %>
  <%= label_tag(:favorite_color, "Favorite Color ") %>
  <%= text_field_tag(:favorite_color, nil, placeholder:  @placeholder_favorite_color) %>

  <%= label_tag(:nickname, "Nickname? ") %>
  <%= text_field_tag(:nickname, nil, placeholder: @placeholder_nickname) %>

  <%= label_tag(:spirit_fruit, "Sprit Fruit ") %>
  <%= text_field_tag(:spirit_fruit, nil, placeholder: @placeholder_major) %>

  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

  <%= submit_tag("Create student") %>
<% end %>